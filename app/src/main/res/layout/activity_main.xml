<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context="com.demo.diyview.MainActivity">

    <com.demo.diyview.view.View01
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:outerColor="@color/colorAccent"
        app:innerColor="@color/colorPrimary"
        app:cycleWithd="6dp"
        app:stepColor="@color/colorPrimary"
        app:stepSize="36sp"
        android:id="@+id/test"
        />
    <com.demo.diyview.view.MyTextView
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mtextColor="@color/colorPrimary"
        app:mtextSize="20sp"
        android:padding="10dp"
        app:mtext="Hello"
        />
</LinearLayout>
