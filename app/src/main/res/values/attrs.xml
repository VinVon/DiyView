<resources>
    <declare-styleable name="MyTextView">
        <attr name="mtext" format="string"></attr>
        <attr name="mtextSize" format="dimension"></attr>
        <attr name="mtextColor" format="color"></attr>
       <attr name="minputtype">
           <enum name="mnumber" value="1"></enum>
           <enum name="mtext" value="2"></enum>
           <enum name="mpassword" value="3"></enum>
       </attr>
    </declare-styleable>
    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="color"></attr>
        <attr name="innerColor" format="color"></attr>
        <attr name="cycleWithd" format="dimension"></attr>
        <attr name="stepSize" format="dimension"></attr>
        <attr name="stepColor" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="ColorTrackView">
        <attr name="originColor" format="color"></attr>
        <attr name="changeColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="progressView">
        <attr name="progressoutCycleColor" format="color"></attr>
        <attr name="progressinnerCycleColor" format="color"></attr>
        <attr name="progresstextColor" format="color"></attr>
        <attr name="progresstextSize" format="dimension"></attr>
        <attr name="progressCycleWidth" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="ChangeView">
        <attr name="rectangularColor" format="color"></attr>
        <attr name="triangleColor" format="color"></attr>
        <attr name="circularColor" format="color"></attr>
    </declare-styleable>
</resources>